<div class="co_container">
  <!-- ----------- Order Items Start ------------ -->
  <div class="co_content">
    <%= simple_form_for [:admin, @product] do |f| %>

      <div class="group">
        <%= f.input :title %>
      </div>

      <div class="group">
        <%= f.input :description %>
      </div>

      <div class="group">
        <%= f.input :quantity %>
      </div>

      <div class="group">
        <%= f.input :price %>
      </div>

      <% if @photo.image.present? %>
        <span>目前商品圖</span> <br>
        <%= image_tag(@photo.image.thumb.url) %>
      <% end %>

      <div class="form-group">
        <%= f.simple_fields_for :photo do |c| %>
          <%= c.input :image , as: :file %>
        <% end %>
      </div>

      <%= f.submit "Submit", class: "btn btn-warning ", data: { disable_with: "Submitting..." } %>

    <% end %>
  </div>
</div>
