<script>
$(document).ready(function(){

  <% if @page == "about" %>
    $("#menu1").attr('class', 'current');
  <% end %>
});
</script>
<body style="background: url(https://newevolutiondesigns.com/images/freebies/city-wallpaper-18.jpg) no-repeat fixed;">
<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox" style="padding-top: 40px">
    <div class="item active" style="width: 50%;margin: 0 auto;">
      <%= image_tag("coffee11.jpg", alt: 'Site Logo') %>
    </div>

    <div class="item" style="width: 50%;margin: 0 auto;">
      <%= image_tag("coffee12.jpg", alt: 'Site Logo') %>
    </div>

    <div class="item" style="width: 50%;margin: 0 auto;">
      <%= image_tag("coffee13.jpg", alt: 'Site Logo') %>
    </div>

    <div class="item" style="width: 50%;margin: 0 auto;">
      <%= image_tag("coffee14.jpg", alt: 'Site Logo') %>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span style="padding-top: 60%" class="fa fa-angle-left fa-5x" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span style="padding-top: 60%" class="fa fa-angle-right fa-5x" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</body>
