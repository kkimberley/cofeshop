<div class="form">
  <div class="forceColor"></div>
  <div class="topbar">
    <div class="spanColor"></div>
     <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, placeholder: 'Enter Email', label: false, :input_class => false, :input_html => { :class => "input" } %>
        <%= f.input :password, required: false, input_class: false, placeholder: 'Enter Password', label: false,input_html: { class: "input" } %>
        <%= f.input :remember_me, label_html: { class: "remember"}, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <button class="submit" id="submit" >Login</button>
      </div>
    <% end %>
  </div>
</div>
<div class="form_signup">
<%= render "devise/shared/links" %>
</div>
